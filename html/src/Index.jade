div.row
    div.col-lg-12
        div.page-header Applications 
            i.fa.fa-plus-square.BWGray.pull-right.bigIcon(ng-click="$parent.isCollapsed = !$parent.isCollapsed", tooltip-placement="left" tooltip="Add New Application")
            div.clearfix
    //-- end .col-lg-12 --
//-- end .row --
div
    div.row(collapse="isCollapsed")
        div.col-lg-7.col-md-12(style="float: none; margin: 0 auto;")
            form.form(name="newApp", action="#", ng-controller="newAppCtrl")
                div.panel.panel-gray
                    div.panel-heading
                        div.row
                            div.col-xs-2.col-sm-1
                                i.fa.fa-users.fa-5x
                            div.col-xs-7.col-sm-8.left-gap.blackText
                                div.medium
                                    input.form-control(type="text", name="appName", ng-model="form.appName", placeholder="Application Name" required)
                                div.medium-small
                                    input.form-control.tiny-top-margin(type="text", name="appPhone", ng-model="form.appPhone", placeholder="Application Phone" required)
                    div.panel-footer(style="padding: 0px; height:40px")
                        div.row(style="padding: 0px; height:40px")
                            div.col-xs-6.submitInPanel.BWGray.hoverBluePointer(style="padding: 0px;" ng-click="form.submit()")
                                i.fa.fa-check
                                span.small-left-gap Submit
                            div.col-xs-6.cancelInPanel.BWGray.hoverBluePointer(style="padding: 0px;", ng-click="$parent.isCollapsed = !$parent.isCollapsed")
                                i.fa.fa-times
                                span.small-left-gap Cancel
                        div.clearfix
    //-- end .row --
    div.row(ng-repeat="app in apps | orderBy:'Name'")
        div.col-lg-7.col-md-12(style="float: none; margin: 0 auto;")
            div.panel(ng-class="{'panel-red' : $index%colorCount==0, 'panel-purple' : $index%colorCount==1, 'panel-blue' : $index%colorCount==2, 'panel-green' : $index%colorCount==3, 'panel-yellow' : $index%colorCount==4}")
                div.panel-heading
                    div.row
                        div.col-xs-2.col-sm-1
                            i.fa.fa-users.fa-5x
                        div.col-xs-7.col-sm-8.big-left-gap
                            div.medium {{app.Name}}
                            div.medium-small {{app.Phone}}
                        div.col-xs-3.text-right
                            div.huge {{app.Staff.length}}
                            div(ng-if="app.Staff.length > 1") Staff Members
                            div(ng-if="app.Staff.length == 1") Staff Member
                a(href="/Applications/{{app.Name}}")
                    div.panel-footer
                        span.pull-left View Details
                        span.pull-right
                            i.fa.fa-arrow-circle-right
                        div.clearfix
    //-- end .row --
